@model List<MvcPracownicy.Models.UserPaymentDetails>

@{
    ViewData["Title"] = "Moje Płatności";
}

<h1 class="display-5 text-dark mb-4">@ViewData["Title"]</h1>

<div class="container my-4">
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover shadow-sm rounded">
            <thead class="bg-primary text-white">
                <tr>
                    <th scope="col">ID Płatności</th>
                    <th scope="col">ID Umowy</th>
                    <th scope="col">Nazwa Oferty</th> @* Zmieniono na Nazwa Umowy *@
                    <th scope="col">Kwota</th>
                    <th scope="col">Data Płatności</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var payment in Model)
                {
                    <tr>
                        <td>@payment.Id_platnosci</td>
                        <td>@payment.Id_umowy</td>
                        <td>@payment.NazwaUmowy</td> @* Wyświetla nazwę umowy *@
                        <td>@payment.Kwota.ToString("C2")</td>
                        <td>@payment.DataPlatnosci.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info shadow-sm rounded-lg p-4" role="alert">
            <p class="mb-0">Brak zarejestrowanych płatności dla tego użytkownika.</p>
        </div>
    }
</div>
